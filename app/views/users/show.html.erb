<%= render 'shared/page_title', title: "Usuario: " +  @user.username %> 
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= image_tag("seatLogo.png", size:"100x100") %>
    <hr/>
  </div>
</div>

<div class = row>
  <div class = "col-md-4 col-md-offset-4 center">
    <% if @offers.any? %><h3><em>Ofertas publicadas:</em></h3><%end%>
    <%= will_paginate @offers %>
  </div>
</div>
<% @offers.each do |offer| %>
<div class="row">
  <div class="col-lg-6 well col-lg-offset-1">
    <h4><%= link_to offer.name, offer_path(offer) %></h4>
    <p><%= offer.summary %></p>
     <p>Publicado para: <%= render offer.cars %></p>
    <p>
      <span class = "quiet">
        <small>
          Creado: <%=time_ago_in_words(offer.created_at)%>, 
        </small>
      </span>
      <span class = "quiet">
       <small>
        Editado: <%= time_ago_in_words(offer.updated_at)%> 
       </small>
      </span>
     </p>
    </div>
    <div class="col-md-4">
        <%= image_tag(offer.picture.url,size: "250x150",class: "gravatar") if offer.picture? %>
      </div>
</div>
<%end%>
