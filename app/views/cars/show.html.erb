<%= render 'shared/page_title', title: "Ofertas para: " +  @car.name %> 

<ul class="nav nav-tabs">
   <li>
    <%= link_to "Ofertas", offers_path %>
  </li>
  <li>
    <%= link_to "Usuarios", users_path %>
  </li>
  <li class='active'>
    <%= link_to "Categorías", cars_path %>
  </li>
   <li>
    <%= link_to "Clientes", appusers_path %>
  </li>
</ul>

<%= will_paginate @offers %>

<% @car.offers.each do |offer| %>
  <div class="row">
      <div class="col-md-2">
        <section class="chef_info center">
           <%= image_tag("seatLogo.png", size:"100x100") %>
          <h5 class= "username_red">Usuario: <%= offer.user.username %></h5>
        </section>
      </div>
      
      <div class="col-lg-6 well">
         <h4><%= link_to offer.name, offer_path(offer) %></h4>
         <p><%= offer.summary %></p>
         <p>Publicado para: <%= render offer.cars %></p>
         <p>
           <span class = "quiet">
             <small>
              Creado: <%=time_ago_in_words(offer.created_at)%>, 
             </small>
           </span>
           <span class = "quiet">
             <small>
                Actualizado: <%= time_ago_in_words(offer.updated_at)%>
             </small>
           </span>
         </p>
      </div>
      <div class="col-md-4">
        <%= image_tag(offer.picture.url,size: "190x160",class: "gravatar") if offer.picture? %>
      </div>
  </div>
  <hr/>
<% end %>

<%= will_paginate @offers %>

<h5><%= link_to "Regresar a la Lista de Categorías", cars_path, class:"btn btn-danger btn-small" %></h5>