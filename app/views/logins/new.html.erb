<%= render 'shared/page_title', title: 'Iniciar sesión' %>

<div class= "row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag '/login' do %>
      
      <%= label_tag :email %>
      <%= text_field_tag :email %>
      
      <%= label_tag :password %>
      <%= password_field_tag :password %>
      
      <%= submit_tag 'Iniciar sesión', class: 'btn btn-danger' %>
      
    <% end%>
  </div>
</div>